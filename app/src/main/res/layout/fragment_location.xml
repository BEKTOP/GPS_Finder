<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:context="com.github.a5809909.gps_finder.Fragment.LocationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_date_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date / Time: "
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_date_and_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date / Time"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"/>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/colorPrimary"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_cell_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"

                android:text="Cell ID: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_view_lac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:maxLines="1"
                android:text="LAC: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:id="@+id/text_cell_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"

                android:text="Cell ID: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_lac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="LAC: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_mcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"

                android:text="MCC "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_view_mnc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:maxLines="1"
                android:text="MNC: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:id="@+id/text_mcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="MCC "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_mnc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="MNC: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="end"
                android:text="Latitude: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_view_longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="end"
                android:text="Longitude: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_view_accuracy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="end"
                android:text="Accuracy: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_view_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="end"
                android:text="Country: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_view_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="end"
                android:text="City: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_view_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="end"
                android:text="Street: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Latitude: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Longitude: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_accuracy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Accuracy: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Country: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="City: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Street: "
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save in database"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/logServiceOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LogService"
            android:textOff="OFF"
            android:textOn="ON"
            app:showText="true"
            app:trackTint="@color/colorPrimary"/>

    </LinearLayout>


</LinearLayout>


